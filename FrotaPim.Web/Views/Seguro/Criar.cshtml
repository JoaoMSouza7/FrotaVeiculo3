@model FrotaPim.Web.Models.ViewsModels.SeguroViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row header">
    <div class="col-md-12">
        <h3>@ViewData["Title"]</h3>
        <a href="/Seguro" class="btn btn-secondary btn-sm">Voltar</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar" asp-controller="Seguro" method="post" asp-anti-forgery>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Apolice" class="control-label">Apolice</label>
                <input asp-for="Apolice" class="form-control"  name="Apolice"/>
                <span asp-validation-for="Apolice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguradora" class="control-label">Seguradora</label>
                <input asp-for="Seguradora" class="form-control"  name="Seguradora"/>
                <span asp-validation-for="Seguradora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Veículo</label>
                <div>
                    @Html.DropDownList("IDCarro", new SelectList(@Model.Carros, "IDCarro", "Placa", "0"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataContratacao" class="control-label">DataContratacao</label>
                <input asp-for="DataContratacao" class="form-control"  name="DataContratacao"/>
                <span asp-validation-for="DataContratacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataValidade" class="control-label">DataValidade</label>
                <input asp-for="DataValidade" class="form-control" name="DataValidade" />
                <span asp-validation-for="DataValidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorSeguro" class="control-label">Valor do Seguro</label>
                <input placeholder="R$" asp-for="ValorSeguro" class="form-control"  name="ValorSeguro"/>
                <span asp-validation-for="DataValidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
