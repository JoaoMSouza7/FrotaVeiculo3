@model FrotaPim.Web.Models.ViewsModels.SeguroViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Seguro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Seguro" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Apolice" class="control-label">Apolice</label>
                <input asp-for="Apolice" class="form-control" name="Apolice" value="@Model.Apolice"/>
                <span asp-validation-for="Apolice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seguradora" class="control-label">Seguradora</label>
                <input asp-for="Seguradora" class="form-control" name="Seguradora" value="@Model.Seguradora"/>
                <span asp-validation-for="Seguradora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Veículo</label>
                <div>
                    @Html.DropDownList("IDCarro", new SelectList(@Model.Carros, "IDCarro", "Placa", "0"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataContratacao" class="control-label">DataContratacao</label>
                <input asp-for="DataContratacao" class="form-control" name="DataContratacao" value="@Model.DataContratacao"/>
                <span asp-validation-for="DataContratacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataValidade" class="control-label">DataValidade</label>
                <input asp-for="DataValidade" class="form-control" name="DataValidade" value="@Model.DataValidade"/>
                <span asp-validation-for="DataValidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorSeguro" class="control-label">Valor do Seguro</label>
                <input placeholder="R$" asp-for="ValorSeguro" class="form-control" name="ValorSeguro" value="@Model.ValorSeguro"/>
                <span asp-validation-for="DataValidade" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
