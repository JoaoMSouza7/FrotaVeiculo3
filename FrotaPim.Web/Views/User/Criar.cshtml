@model FrotaPim.Web.Models.ViewsModels.UserViewModel
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Novo Usuário</h3>
    </div>
</div>
<div class="row form-wrapper">
    <div class="col-md-12">
        <form id="form" class="form-horizontal" asp-action="Criar" asp-controller="User"
            data-ajax="true" method="post" data-ajax-failure="formOnFail" data-ajax-success="window.location = '/User'"
            asp-anti-forgery>
            <input type="hidden" class="form-control" asp-for="Id" >
            <div class="form-group">
                <label class="col-md-2 control-label"><b>Email</b></label>
                <div class="col-md-8">
                    <input type="text" class="form-control" asp-for="Email" name="Email">    
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label"><b>Senha</b></label>
                <div class="col-md-8">
                    <input type="text" class="form-control" asp-for="Password" name="Password">    
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label"><b>Função</b></label>
                <div class="col-md-2">
                    <select class="form-control" asp-for="Role" name="Role">
                        <option></option>
                        <option value="Manager" name="Manager">Admin</option>
                        <option value="Operation" name="Operation">Operador</option>
                    </select>
                    
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button class="btn btn-success btn-sm">Salvar</button>
                    <a href="/User" class="btn btn-secondary btn-sm">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
}