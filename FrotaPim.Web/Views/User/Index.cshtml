@model IEnumerable<FrotaPim.Web.Models.ViewsModels.UserViewModel>
@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row header">
    <div class="col-md-12">
        <h3>Usuários</h3>
        <a href="/User/Criar" class="btn btn-primary">Novo Usuário</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <th>
                    Email
                </th>
                <th>
                    
                </th>
            </thead>
            <tbody>
                @if(@Model != null)
                {
                    foreach(var viewModel in @Model)
                    {
                        <tr>
                            <td>
                                <a class="name">@viewModel.Email</a>
                            </td>
                            <td>
                                <a href="/User/ChangePassword/@viewModel.Id" class="btn btn-dark btn-sm">Alterar Senha</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>