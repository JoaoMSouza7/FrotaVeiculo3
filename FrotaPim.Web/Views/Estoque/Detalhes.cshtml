@model FrotaPim.Web.Models.ViewsModels.EstoqueViewModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Estoque</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomePeca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomePeca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPeca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPeca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
</div>
<div>
    <a href="../Editar/@Model.IdEstoque" class="btn btn-primary btn-sm"><i class="fa fa-edit mx-2"></i>Editar</a> |
    <a href="../Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>
