@model FrotaPim.Web.Models.ViewsModels.PessoaViewModel

@{
    ViewData["Title"] = "Informações do(a) colaborador(a) ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>@ViewData["Title"]@Model.Nome</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class = "col-sm-2">
            Data de Admissão
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Admissao)
        </dd>
        <dt class = "col-sm-2">
            Telefone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            Cargo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCargo)
        </dd>
        <dd class = "col-sm-2">
            ------------------
        </dd>
        <dd class = "col-sm-10">
            ---------------------------------------
        </dd>
        <dt class = "col-sm-2">
            Endereço Completo
        </dt>
        <dd class = "col-sm-10">
        </dd>
        <dt class = "col-sm-2">
            Rua
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Rua)
        </dd>
        <dt class = "col-sm-2">
            Número
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Numero)
        </dd>
        <dt class = "col-sm-2">
            CEP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.CEP)
        </dd>
        <dt class = "col-sm-2">
            Bairro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Bairro)
        </dd>
        <dt class = "col-sm-2">
            Cidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Cidade)
        </dd>
        <dt class = "col-sm-2">
            UF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco.Estado)
        </dd>
    </dl>
</div>
<div>
    <a href="../Editar/@Model.IDPessoa" class="btn btn-primary btn-sm">Editar</a> |
    <a href="../Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>
