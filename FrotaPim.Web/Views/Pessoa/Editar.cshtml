@model FrotaPim.Web.Models.ViewsModels.PessoaViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" asp-controller="Pessoa" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input asp-for="Nome" class="form-control" name="Nome" value="@Model.Nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label">CPF</label>
                <input asp-for="CPF" class="form-control" name="CPF" value="@Model.CPF"/>
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admissao" class="control-label">Admissão</label>
                <input asp-for="Admissao" class="form-control" name="Admissao" value="@Model.Admissao"/>
                <span asp-validation-for="Admissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" name="Telefone" value="@Model.Telefone"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cargo</label>
                <div>
                    @Html.DropDownList("CargoId", new SelectList(@Model.Cargos, "CargoId", "Nome", "0"), new { @class = "form-control" })
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="../Editar/@Model.Id" class="btn btn-primary btn-sm">Editar</a> |
    <a href="../Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
