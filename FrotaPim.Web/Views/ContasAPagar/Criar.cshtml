@model FrotaPim.Web.Models.ViewsModels.ContasAPagarViewModel

@{
    ViewData["Title"] = "Criar Nova Despesa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row header">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar" asp-controller="ContasAPagar" method="post" asp-anti-forgery>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CentroDeCusto" class="control-label">Centro de Custo</label>
                <input asp-for="CentroDeCusto" class="form-control" name="CentroDeCusto" required/>
                <span asp-validation-for="CentroDeCusto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoDespesa" class="control-label">Tipo de despesa</label>
                <input asp-for="TipoDespesa" class="form-control" name="TipoDespesa" required/>
                <span asp-validation-for="TipoDespesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" name="Descricao" required/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vencimento" class="control-label">Vencimento</label>
                <input type="date" placeholder="dd/mm/aaaa" asp-for="Vencimento" class="form-control" name="Vencimento" required/>
                <span asp-validation-for="Vencimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor</label>
                <input size="10" maxlength="10" onkeydown="FormataMoeda(this,10,event)" onkeypress="return maskKeyPress(event)" asp-for="Valor" class="form-control" name="Valor" required/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-success btn-sm" />
                <a href="/ContasAPagar" class="btn btn-secondary btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>

