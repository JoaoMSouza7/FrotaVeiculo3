@model FrotaPim.Web.Models.ViewsModels.CargoViewModel

@{
    ViewData["Title"] = "Novo Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="">
    <div class="row header" >
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <a href="/Cargo" class="btn btn-secondary btn-sm">Voltar</a>
    </div>
</div>
<hr />
<div class="row form-wrapper">
    <div class="col-md-12">
        <form class="form-group" asp-action="Criar" asp-controller="Cargo" method="post" asp-anti-forgery>
            <input type="hidden" class="form-control" asp-for="Id">
            <div class="form-group">
                <label class="col-md-2 control-label">Nome</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="Nome">
                    <span asp-validation-for="Nome" class="text-danger" name="Nome"></span>
                </div>
                <label class="col-md-2 control-label">Descrição</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" name="Descricao">
                    <span asp-validation-for="Descricao" class="text-danger" name="Descricao"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-8">
                    <button class="btn btn-success btn-sm">Salvar</button>
                </div>
            </div>
        </form>
    </div>
</div>
</body>

