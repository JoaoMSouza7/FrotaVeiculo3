@model FrotaPim.Web.Models.ViewsModels.CargoViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-group" asp-action="Editar" asp-controller="Cargo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input name="Nome" class="form-control" asp-for="Nome" value="@Model.Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Descrição</label>
                <input name="Descricao" class="form-control" asp-for="Descricao" value="@Model.Descricao" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
