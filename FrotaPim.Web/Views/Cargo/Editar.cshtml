@model FrotaPim.Web.Models.ViewsModels.CargoViewModel

@{
    ViewData["Title"] = "Editar Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="">
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-group" asp-action="Editar" asp-controller="Cargo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" class="form-control" asp-for="Id" value="@Model.CargoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"><b>Nome</b></label>
                <input name="Nome" class="form-control" asp-for="Nome" value="@Model.Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"><b>Descrição</b></label>
                <input name="Descricao" class="form-control" asp-for="Descricao" value="@Model.Descricao" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="../Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>
</body>