@model FrotaPim.Web.Models.ViewsModels.CargoViewModel

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja excluir isto?</h3>
<div>
    <form id="form" class="form-horizontal" asp-action="Deletar" asp-controller="Cargo" method="post" asp-anti-forgery>
        <hr />
        <input type="hidden" asp-for="Id" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
            <button class="btn btn-success">Apagar</button>
            <a href="/Cargo" class="btn btn-primary">Voltar</a>
    </form>
</div>
