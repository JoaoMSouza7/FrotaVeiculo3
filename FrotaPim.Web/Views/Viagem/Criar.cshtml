@model FrotaPim.Web.Models.ViewsModels.ViagemViewModel

@{
    ViewData["Title"] = "Adicionar Viagem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row header">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <a href="/Viagem" class="btn btn-secondary btn-sm">Voltar</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar" asp-controller="Viagem" method="post" asp-anti-forgery>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Origem" class="control-label"><b>Origem</b></label>
                <input asp-for="Origem" class="form-control" name="Origem"/>
                <span asp-validation-for="Origem" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="Destino" class="control-label"><b>Destino</b></label>
                <input type="Destino" asp-for="Destino" class="form-control" name="Destino"/>
                <span asp-validation-for="Destino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KM" class="control-label"><b>Quilometragem</b></label>
                <input placeholder="KM" asp-for="KM" class="form-control" name="KM"/>
                <span asp-validation-for="KM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Custo da Viagem</label>
                <input size="10" maxlength="10" onkeydown="FormataMoeda(this,10,event)" onkeypress="return maskKeyPress(event)" placeholder="R$" asp-for="Valor" class="form-control" name="Valor"/>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataViagem" class="control-label"><b>Data da Viagem</b></label>
                <input type="date" placeholder="dd/mm/aaaa" asp-for="DataViagem" class="form-control" name="DataViagem"/>
                <span asp-validation-for="DataViagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Pessoa</label>
                <div>
                    @Html.DropDownList("IDPessoa", new SelectList(@Model.Pessoas, "IDPessoa", "Nome", "0"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Ve√≠culo</label>
                <div>
                    @Html.DropDownList("IDCarro", new SelectList(@Model.Carros, "IDCarro", "Placa", "0"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
</div>

